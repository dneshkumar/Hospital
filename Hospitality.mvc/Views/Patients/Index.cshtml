
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn {
        background-color: DodgerBlue;
        border: none;
        color: white;
        padding: 12px 16px;
        font-size: 16px;
        cursor: pointer;
    }
</style>

<div class="row" style="margin-top:30px;margin-bottom:30px;">
    <a href="@Url.Action("Create","Patients")" class="btn btn-default btn-labeled col-xs-12 col-md-2">New Patient</a>
</div>
<div class="row">
    <div style="overflow-y:auto;max-height:450px">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Mobile
                    </th>
                    <th>
                        Disease
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: Patients">
                <tr>
                    <td data-bind="text: ID"></td>
                    <td data-bind="text: Name"></td>
                    <td data-bind="text: Age"></td>
                    <td data-bind="text: Gender"></td>
                    <td data-bind="text: Address"></td>
                    <td data-bind="text: Mobile"></td>
                    <td data-bind="text: Disease"></td>
                    <td data-bind="text: Status"></td>
                    <td>
                        <a data-bind="attr: { 'href': '@Url.Action("Edit", "Patients")?id=' + ID }" class="btn-link">Edit</a>


                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!--section for loading scripts-->
@section scripts {
    <script src="~/Scripts/KOScripts/koRead.js"></script>
    }
