@model Hospitality.Interface.Models.Patient

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    span.errorStyle {
        color: red;
        margin-left: 5%;
    }

    .form-group.required .control-label:after {
        content: "*";
        color: red;
        padding-left: 2%;
    }

    .error {
        border: 1px solid red;
    }
</style>



<div class="form-horizontal ">
    <div class="panel panel-default " style="margin-top:30px;">
        <div class="panel-heading">Patient Registration</div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group required col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control col-md-2" id="Name" name="Name" type="text" value=""
                               data-bind="value: Name,
                       valueUpdate: 'afterkeydown',
                       css:{'error':(!Name.isValid() && showErrors())}">
                    </div>
                </div>

                <div class="form-group required col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select data-bind="options: availableGender,
                                       optionsText: 'Text',
                                       value: Gender,
                                       optionsCaption: 'Select Gender',
                                       valueUpdate:'afterkeydown',
                                       css:{'error':(!Gender.isValid() && showErrors())}" class="form-control col-md-2" id="Gender" name="Gender"></select>
                    </div>
                </div>

                <div class="form-group required col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control col-md-2" id="Age" name="Age" type="text" value=""
                               data-bind="value: Age,
                       css:{'error':(!Age.isValid() && showErrors())},
                       valueUpdate: 'afterkeydown'">
                    </div>
                </div>

                <div class="form-group required col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control col-md-2" id="Mobile" name="Mobile" type="text" value="" maxlength="10"
                               data-bind="value: Mobile,
                       css:{'error':(!Mobile.isValid() && showErrors())},
                       valueUpdate: 'afterkeydown'">
                    </div>
                </div>

                <div class="form-group required col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea class="form-control col-md-2" id="Address" name="Address" type="text" value="" rows="4"
                                  data-bind="value: Address,
                       css:{'error':(!Address.isValid() && showErrors())},
                       valueUpdate: 'afterkeydown'"></textarea>
                    </div>
                </div>

                <div class="form-group required col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.Disease, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea class="form-control col-md-2" id="Disease" name="Disease" type="text" value=""
                                  rows="4" data-bind="value: Disease,
                                    validationElement: Disease,
                                    valueUpdate: 'afterkeydown',
                                    css:{'error':(!Disease.isValid() && showErrors())},"></textarea>
                    </div>
                </div>

                <div class="form-group required col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.DateOfJoin, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control col-md-2" id="DateOfJoin" name="DateOfJoin" type="date" value=""
                               data-date-format="yyyy-mm-dd"
                               data-bind="value: DateOfJoin,
                       css:{'error':(!DateOfJoin.isValid() && showErrors())},
                       valueUpdate: 'afterkeydown'">
                    </div>
                </div>

                <div class="form-group col-md-6 col-xs-12">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select data-bind="options: availableStatus,
                                       optionsText: 'Text',
                                       value: Status,
                                       optionsCaption: 'Select Status',
                                       css:{'error':(!Status.isValid() && showErrors())},
                                       valueUpdate: 'afterkeydown'," class="form-control col-md-2" id="Status" name="Status"></select>
                    </div>
                </div>


            </div>
        </div>
    </div>



    <div class="form-group col-xs-12">
        <div class=" col-xs-12 col-xs-offset-0 col-md-2 col-md-offset-8 col-lg-1 col-lg-offset-10" style="margin-bottom:15px;">
            <input type="submit" data-bind="click: createPatient" value="Save" class="btn btn-success col-xs-12 col-md-12" style="max-width:none" />
        </div>
        <div class="col-xs-12 col-md-2 col-lg-1">
            <a href="@Url.Action("Index","Patients")" class="btn btn-warning col-xs-12 col-md-12">Back</a>
        </div>

    </div>
</div>





<!--section for loading scripts-->
@section scripts {
    <link href="~/Content/sweetalert2.css" rel="stylesheet" />
    <script src="~/Scripts/KOScripts/koCreate.js"></script>
    <script src="~/Scripts/sweetalert.js"></script>
    }